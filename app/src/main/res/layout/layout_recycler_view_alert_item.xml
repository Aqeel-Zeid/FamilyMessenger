<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_alert_item"
    app:cardCornerRadius="16dp" app:cardBackgroundColor="@color/cardview_light_background" android:layout_margin="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="4dp" android:layout_margin="4dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="18sp"
            android:id="@+id/text_view_AlertItem_priority"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_AlertItem_title"
            android:text="Title"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_AlertItem_description"
            android:text="Description"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed-light"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
